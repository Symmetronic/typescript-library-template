{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "target": "ES5"
  },
  "exclude": ["node_modules"],
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src"]
}
