{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES5"
  },
  "include": [
    "src",
    "eslint.config.mjs",
    "lint-staged.config.mjs",
    "prettier.config.mjs",
    "vite.config.ts"
  ]
}
