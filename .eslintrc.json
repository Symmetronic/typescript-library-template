{
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "curly": ["error", "all"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["*.config.{cjs,js,mjs,ts}"]
      }
    ],
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off"
  }
}
